<Window x:Class="SubScreenDisplay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SubScreenDisplay"
        xmlns:controls="clr-namespace:SubScreenDisplay.Player"
        mc:Ignorable="d"
        Title="音乐播放器" Height="480" Width="1180"
        Background="#1A1A1A">

    <Grid Margin="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- 左侧歌词 -->
        <StackPanel Grid.Column="0">
            <controls:LyricItem Main="当潮流爱新鲜" Sub="dong ciu lao oi san sin" />
            <controls:LyricItem Main="当旁人爱标签" Sub="dong pong yen oi biu cim" IsHighlighted="True" />
            <controls:LyricItem Main="幸得伴着你我" Sub="hang da bun zoe nei o" />
            <controls:LyricItem Main="是窝心的自然" Sub="si wo sam di zi yin" />
            <controls:LyricItem Main="当闲言再尖酸" Sub="dong han yin zoi zim svn" />
            <controls:LyricItem Main="给他妒忌多点" Sub="ka ta dou gei do dim" />
            <controls:LyricItem Main="因世上的至爱" Sub="yan sei soeng di zi oi" />
        </StackPanel>

        <!-- 中间专辑封面和播放控件 -->
        <StackPanel Grid.Column="1" Margin="40, 0" VerticalAlignment="Center">

            <!-- 专辑封面 -->
            <Border Width="280" Height="280"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    CornerRadius="8" BorderThickness="0">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="5" Direction="270"
                                      Color="Black" Opacity="0.6" BlurRadius="10" />
                </Border.Effect>
                <Border.Background>
                    <ImageBrush Stretch="UniformToFill" ImageSource="pack://application:,,,/Assets/无条件.jpg" />
                </Border.Background>
            </Border>

            <!-- 进度条 -->
            <StackPanel>

                <Slider Margin="0, 20, 0, 0" Value="30" Maximum="100" />
                <Grid Margin="5, 0">
                    <TextBlock FontFamily="Segoe UI Variable" FontWeight="Regular" FontSize="12" Text="01:20" Foreground="White" HorizontalAlignment="Left" />
                    <TextBlock FontFamily="Segoe UI Variable" FontWeight="Regular" FontSize="12" Text="03:48" Foreground="White" HorizontalAlignment="Right" />
                </Grid>

                <!-- 播放控制按钮 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Button Content="" FontSize="16" Width="40" Height="40" FontFamily="Segoe Fluent Icons"
                            Background="Transparent" Foreground="White" BorderThickness="0" />
                    <Button Content="" FontSize="16" Width="40" Height="40" FontFamily="Segoe Fluent Icons"
                            Background="Transparent" Foreground="White" BorderThickness="0" />
                    <Button Content="" FontSize="16" Width="40" Height="40" FontFamily="Segoe Fluent Icons"
                            Background="Transparent" Foreground="White" BorderThickness="0" />
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- 右侧信息 -->
        <Grid Grid.Column="2">
            <!-- 歌曲信息 -->
            <StackPanel VerticalAlignment="Bottom">
                <TextBlock Foreground="White" HorizontalAlignment="Right" FontFamily="Source Han Sans SC"
                           FontWeight="Heavy" FontSize="40">
                    无条件
                </TextBlock>
                <TextBlock Foreground="White" HorizontalAlignment="Right" FontFamily="Source Han Sans SC"
                           FontWeight="Regular" FontSize="24">
                    陈奕迅
                </TextBlock>
            </StackPanel>
        </Grid>

        <!-- 状态文本（隐藏但保留功能） -->
        <TextBlock x:Name="StatusText"
                   Visibility="Collapsed" Text="状态信息" />

        <!-- 保留原有按钮但隐藏 -->
        <Button x:Name="OpenDataBindingWindow"
                Content="打开数据绑定窗口" Click="OpenDataBindingWindow_Click"
                Visibility="Collapsed" />
    </Grid>
</Window>